html
  head
    title Caching With Redis
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css") 
  body(class="bg-dark")
    div(class="container")
      h1(class="text-center mt-3 text-white") Caching With Redis
      div(class="row mt-5")
        div(class="col-md-4")
            div(class="bg-white p-3 border border-top-0")
              div(class="mb-3")
                h4(class="text-center my-3") Create Article 
                form(action="/" method="post")
                  label(class="form-label") Title
                  input(class="form-control" name="title" placeholder="Enter Title")
                  label(class="form-label mt-3") Content
                  input(class="form-control" name="content" placeholder="Enter Content")
                  button(class="btn btn-dark mt-3") Create 
        div(class="col-md-8")
          div(class="row g-3")
            each article in articles
              div(class="col-md-4")
                div(class="card rounded-0")
                  div(class="card-body")
                    h5(class="card-title")= article.title
                    p(class="card-text")= article.content.slice(0, 40)+'....'
                    a(href="# text-right") Read More
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js")